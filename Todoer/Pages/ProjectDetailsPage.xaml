<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding Name}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todoer.ProjectDetailsPage" xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSaveProject"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout >
            
            <ffimageloading:CachedImage Source="{Binding PhotoUrl}" LoadingPlaceholder="placeholder.png" ErrorPlaceholder="placeholder.png" HeightRequest="260" />
            
            <Label Text="Employees in this project" HorizontalOptions="CenterAndExpand" Margin="10"/>
            
            <ListView x:Name="WorkersListView" SelectionMode="Single" RowHeight="50" Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" LineBreakMode="MiddleTruncation" VerticalTextAlignment="Center" HorizontalOptions="Start"/>
                                <Label Text="{Binding Skill}" VerticalTextAlignment="Center" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Label Text="Employees available" HorizontalOptions="CenterAndExpand" Margin="10"/>
           
            <ListView x:Name="EmployeesListView" SelectionMode="Single" ItemTapped="OnAddEmployeeToProject" RowHeight="50" Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
                                <Label Text="{Binding Skill}" VerticalTextAlignment="Center" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>